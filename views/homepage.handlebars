{{#each posts as |post|}}
  <section class='posts'>
    <div class='card m-5'>
      <div class='card-header'>
        <h4 class='post-title card-title'><a
            class='text-info'
            href='/posts/{{id}}'
          >{{title}}</a></h4>
        <h6 class='card-subtitle mb-2'>Posted by
          {{post.user.username}}
          on
          {{format_date post.createdAt}}</h6>
      </div>
      <div class='card-body'>
        <p class='card-text'>{{content}}</p>
      </div>
    </div>
  </section>

{{/each}}