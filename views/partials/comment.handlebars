<div class='comments'>
  {{#each this as |comment|}}
    <div class='card'>
      <h3 class='card-header'></h3>
      <section class='comment card-body'>
        <div class='text'>
          {{comment.text}}
        </div>
        <div class='meta'>
          -{{user.username}},
          {{format_date createdAt}}
        </div>
      </section>
    </div>
  {{/each}}
</div>