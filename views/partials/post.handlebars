<div class='card m-5'>
  <div class='card-header'>
    <h2 class='card-title'><a
        class='text-info'
        href='/post/{{id}}'
      >{{post.title}}</a></h2>
    <h6 class='card-subtitle mb-2'>Posted by
      {{post.user_id}}
      on
      {{format_date post.created_at}}</h6>
  </div>
  <div class='card-body'>
    <p class='card-text'>{{post.content}}</p>
  </div>
  <button class='delete-btn btn btn-block btn-dark'>Delete Post</button>

</div>

{{#if loggedIn}}
  <script src='/js/deletePost.js'></script>
{{/if}}