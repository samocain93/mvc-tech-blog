<div class="card m-5">
  <div class="card-header">
    <h4 class="card-title"><a class="text-info" href="/post/{{id}}">{{post.title}}</a></h4>
    <button class="delete-btn btn">Delete Post</button>
    <h6 class="card-subtitle mb-2">Posted by {{post.user_id}} on {{format_date post.created_at}}</h6>
    </div>
    <div class="card-body">
    <p class="card-text">{{post.content}}</p>
    </div>
  </div>


    {{#if loggedIn}}
        <script src="/js/deletePost.js"></script>
    {{/if}}