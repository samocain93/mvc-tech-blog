<div class='card m-5'>
  <div class='card-header'>
    <h3 class='card-title'><a
        class='text-info'
        {{!-- href='/post/{{id}}' --}}
      >{{post.title}}</a></h3>
    <h6 class='card-subtitle mb-2'>Posted by
      {{post.user_id}}
      on
      {{format_date post.created_at}}</h6>
  </div>
  <div class='card-body'>
    <p class='card-text'>{{post.content}}</p>
  </div>

</div>